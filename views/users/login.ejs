<%- include('../partials/header') -%>
<div class="container">
<h1 class="text-center mt-5 mb-3">Login</h1>
<% if (messages.error) { %>
    <div class="alert alert-danger p-0 error text-center" role="alert">
        <h4 class="fs-6"> <%= messages.error %> </h4>
      </div>
<% } %>
<% if (messages.success) { %>
    <div class="alert alert-success p-0 error text-center" role="alert">
        <h4 class="fs-6"> <%= messages.success %> </h4>
      </div>
<% } %>
<div class="container w-25">
   
    <form action="/login" method="POST">

        <div class="form-group px-0">
            <input type="email" name="email" class="form-control" placeholder="Email Address">
        </div>

        <div class="form-group px-0">
            <input type="password" name="password" class="form-control" placeholder="Password">
        </div>

        <a class="float-right mt-0 mb-3 text-danger" href="/forgot">Forgot Password?</a>

        <button type="submit" class="btn btn-danger btn-block">Login</button>
    </form>
</div>


</div>
</div>

<%- include('../partials/footer') -%>