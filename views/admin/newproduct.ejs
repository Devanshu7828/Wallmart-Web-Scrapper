<%- include('../partials/header') -%>

<div class="col-9">
    <div class="container p-3 w-100">
        <h1 class="mt-5 mb-4">Add New Product</h1>
        <% if (messages.error) { %>
            <div class="alert alert-danger p-0 error text-center" role="alert">
                <h4 class="fs-6"> <%= messages.error %> </h4>
              </div>
        <% } %>
        <% if (messages.success) { %>
            <div class="alert alert-success p-0 error text-center" role="alert">
                <h4 class="fs-6"> <%= messages.success %> </h4>
              </div>
        <% } %>
        <form class="mt-2" id="newpostform" action="/fetch/data" method="GET">

            <div class="row mt-5 justify-content-center d-flex">
                <div class="col-12">
                    <input type="text" class="form-control" name="search" placeholder="Enter Product URL" required>
                </div>
            </div>

            <div class="justify-content-center d-flex mt-4">
                <button  id="fetchBtn" class="btn btn-danger w-25 py-2">Fetch Data</button>
            </div>
        </form>

        <form class="mt-2" action="/save/data" method="POST">
            <div class="row mt-5 justify-content-center d-flex">
                <div class="col-9 mt-4">
                    <input type="text" class="form-control" name="url" placeholder="Product URL"  value="<%= prdoduct.url %> " 
                        readonly required>
                </div>

                <div class="col-9 mt-4">
                    <input type="text" class="form-control" name="title" placeholder="Product Title" value="<%= prdoduct.title %> " 
                        readonly required>
                </div>

                
                <div class="col-9 mt-4">
                    <input type="text" class="form-control" name="price" placeholder="Product Price" value="<%= prdoduct.price %> " 
                        readonly required>
                </div>
                <div class="col-9 mt-4">
                    <input type="text" class="form-control" name="stock" placeholder="Product Stock" value="<%= prdoduct.stock %> " 
                        readonly required>
                </div>

                <div class="col-9 mt-4">
                    <input type="text" class="form-control" name="sku" placeholder="Enter Product SKU" required>
                </div>
            </div>

            <div class="justify-content-center d-flex mt-4">
                <button id="publishBtn" class="btn btn-danger w-25 py-2">Save Data</button>
            </div>
        </form>

    </div>
</div>
</div>

<%- include('../partials/footer') -%>